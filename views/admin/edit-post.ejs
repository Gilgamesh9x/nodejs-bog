<a href="/dashboard">&larr; Back to Dashboard</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form
    action="/delete-post/<%= post.postNumber %>?_method=DELETE"
    method="POST"
  >
    <input type="submit" value="Delete" class="btn-delete btn" />
  </form>
</div>

<form action="/edit-post/<%= post.postNumber %>?_method=PUT" method="POST">
  <label for="title"><b>Title</b></label>
  <input
    type="text"
    placeholder="Post Title"
    name="postTitle"
    value="<%= post.postTitle %>"
  />

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"><%= post.body %></textarea>

  <input type="submit" value="Update" class="btn" />
</form>
