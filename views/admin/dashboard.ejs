<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-post" class="button">+ Add New Post</a>
</div>

<ul class="admin-posts">
  <% postsToDisplay.forEach(post => { %>
  <li>
    <a href="/post/<%= post.postNumber %>"> <%= post.postTitle %> &nearr; </a>
    <div class="admin-post-controls">
      <a href="/edit-post/<%= post.postNumber %>" class="btn">Edit</a>

      <form
        action="/delete-post/<%= post.postNumber %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="Delete" class="btn" />
      </form>
    </div>
  </li>
  <% }) %>
</ul>
<% if (nextPage !== null) { %>
<a href="/dashboard/?page=<%= nextPage %>" class="pagination"
  >&lt; View Older Posts</a
>
<% } %>
