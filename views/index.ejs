<div class="author">
  <h1 class="author__heading">Hi, I am Gilgamesh9x.</h1>
  <p class="author__body">Web developer.</p>
</div>

<img
  src="/img/hero-image.webp"
  alt="person looking out the window"
  class="hero-image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% postsToDisplay.forEach(post => { %>
    <li>
      <a href="/post/<%= post.postNumber %>">
        <span><%= post.postTitle %></span>
        <span class="article-list__date"
          ><%= new Intl.DateTimeFormat("de-DE").format(post.postDate) %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
